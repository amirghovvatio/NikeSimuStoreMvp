<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search_shape"
            android:src="@drawable/baseline_favorite_border_24"
            android:elevation="12dp"
            android:id="@+id/exploreFav"
            android:padding="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:layout_width="140dp"
            android:layout_height="95dp"
            android:rotation="-12"
            android:scaleX="1"
            android:layout_marginTop="-8dp"
            android:id="@+id/exploreMainImg"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/starter_shoe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Lebron"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/exploreTvName"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$80.99"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginBottom="6dp"
                android:id="@+id/exploreTvPrice"
                android:layout_marginTop="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
          <com.google.android.material.button.MaterialButton
              android:layout_width="90dp"
              android:layout_height="40dp"
              android:text="Buy Now"
              android:id="@+id/exploreBuyNowBtn"
              android:layout_marginEnd="8dp"
              android:textSize="10sp"
              android:textColor="@color/white"
              android:backgroundTint="@color/phosphorus"/>
        </LinearLayout>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>